'use strict';

/**
 * @ngdoc service
 * @name verpApp.DataService
 * @description
 * # DataService
 * Factory in the verpApp.
 */
angular.module('verpApp')
  .factory('DataService', function () {

    //eye tracking data
    var data = {eye:null, scene:null};
	//
	//         var rpParams = {rp:null};
	//
	//         var setRP = function(rp){
	//             rpParams.rp = rp;
	//         };
	//
	//         var getRP = function(){
	//             return rpParams.rp;
	//         };
	//
	//         var setScale  = function(s){
	//            rpParams.sx = s.x;
	//            rpParams.sy = s.y;
	//
	//         };
	//
	//         var getScale  = function(s){
	//             return rpParams;
	//         };

    var eyeTracking = function(_){

     if(!arguments.length) return data.eye;

     if(data.eye !== _){
       data.eye = _;
       $rootScope.broadcast('eye.update', data.eye); 
     }

    };

    var scene = function(_){

     if(!arguments.length) return data.scene;
     data.scene = _;

    };

    // Public API here
    return {
      eyeTracking: eyeTracking,
      scene: scene
    };
  });
